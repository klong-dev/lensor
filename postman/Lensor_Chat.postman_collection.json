{
  "info": {
    "name": "Lensor - Chat",
    "description": "API collection for Chat module - REST API for chat rooms and message history (WebSocket events in separate documentation)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3005",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "roomId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Chat Room",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Photography Discussion\",\n  \"type\": \"group\",\n  \"participantIds\": [\"user-uuid-1\", \"user-uuid-2\"]\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/chat/rooms",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "rooms"]
        },
        "description": "Create a new chat room. Type can be 'direct' (1-on-1) or 'group' (multiple participants)."
      },
      "response": []
    },
    {
      "name": "Create Direct Chat Room",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Direct Chat\",\n  \"type\": \"direct\",\n  \"participantIds\": [\"other-user-uuid\"]\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/chat/rooms",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "rooms"]
        },
        "description": "Create a direct (1-on-1) chat room with another user."
      },
      "response": []
    },
    {
      "name": "Get User's Chat Rooms",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/chat/rooms",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "rooms"]
        },
        "description": "Get all chat rooms where the authenticated user is a participant, sorted by last update."
      },
      "response": []
    },
    {
      "name": "Get Chat Room Details",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/chat/rooms/{{roomId}}",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "rooms", "{{roomId}}"]
        },
        "description": "Get details of a specific chat room including name, type, and participants."
      },
      "response": []
    },
    {
      "name": "Get Room Messages (Default 50)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/chat/rooms/{{roomId}}/messages",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "rooms", "{{roomId}}", "messages"]
        },
        "description": "Get message history for a chat room. Returns last 50 messages by default."
      },
      "response": []
    },
    {
      "name": "Get Room Messages (Custom Limit)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/chat/rooms/{{roomId}}/messages?limit=100",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "rooms", "{{roomId}}", "messages"],
          "query": [
            {
              "key": "limit",
              "value": "100",
              "description": "Number of messages to retrieve"
            }
          ]
        },
        "description": "Get message history with custom limit (e.g., 100 messages)."
      },
      "response": []
    }
  ]
}
