{
  "info": {
    "name": "Lensor - Post Comments",
    "description": "API collection for Post Comments module - create, read, and delete comments with nested reply support",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3005",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "postId",
      "value": "",
      "type": "string"
    },
    {
      "key": "commentId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Comment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Great photo! Love the composition.\",\n  \"parentId\": null\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/comments",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "comments"]
        },
        "description": "Create a new comment on a post. Set parentId to create a nested reply."
      },
      "response": []
    },
    {
      "name": "Create Reply (Nested Comment)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Thank you!\",\n  \"parentId\": \"{{commentId}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/comments",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "comments"]
        },
        "description": "Create a reply to an existing comment by providing parentId."
      },
      "response": []
    },
    {
      "name": "Get Post Comments",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/comments",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "comments"]
        },
        "description": "Get all comments for a post with nested replies structure and user information from Supabase."
      },
      "response": []
    },
    {
      "name": "Delete Comment",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/comments/{{commentId}}",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "comments", "{{commentId}}"]
        },
        "description": "Soft delete a comment. Only the comment author can delete their own comment."
      },
      "response": []
    }
  ]
}
