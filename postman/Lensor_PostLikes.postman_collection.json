{
  "info": {
    "name": "Lensor - Post Likes",
    "description": "API collection for Post Likes module - like/unlike posts, get likes count and check like status",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3005",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "postId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Like a Post",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/like",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "like"]
        },
        "description": "Like a post. User can only like a post once (enforced by unique constraint)."
      },
      "response": []
    },
    {
      "name": "Unlike a Post",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/like",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "like"]
        },
        "description": "Remove like from a post."
      },
      "response": []
    },
    {
      "name": "Get Post Likes",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/likes",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "likes"]
        },
        "description": "Get all likes for a specific post with user information and total count."
      },
      "response": []
    },
    {
      "name": "Check if Post is Liked",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/is-liked",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "is-liked"]
        },
        "description": "Check if the current authenticated user has liked this post."
      },
      "response": []
    }
  ]
}
