{
  "info": {
    "name": "Lensor - Payment",
    "description": "API collection for Payment module - VNPay and PayPal payment gateway integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3005",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "VNPay",
      "item": [
        {
          "name": "Create VNPay Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100000,\n  \"orderInfo\": \"Order #123 - Product purchase\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/payment/vnpay/create",
              "host": ["{{baseUrl}}"],
              "path": ["payment", "vnpay", "create"]
            },
            "description": "Create a VNPay payment. Returns payment URL and order ID. Amount is in VND."
          },
          "response": []
        },
        {
          "name": "VNPay Callback (Success)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/payment/vnpay/callback?vnp_ResponseCode=00&vnp_TxnRef={{orderId}}&vnp_TransactionNo=12345678",
              "host": ["{{baseUrl}}"],
              "path": ["payment", "vnpay", "callback"],
              "query": [
                {
                  "key": "vnp_ResponseCode",
                  "value": "00",
                  "description": "00 = Success"
                },
                {
                  "key": "vnp_TxnRef",
                  "value": "{{orderId}}",
                  "description": "Order ID"
                },
                {
                  "key": "vnp_TransactionNo",
                  "value": "12345678",
                  "description": "VNPay transaction number"
                }
              ]
            },
            "description": "VNPay callback endpoint (public, no auth required). This is called by VNPay after payment completion."
          },
          "response": []
        },
        {
          "name": "VNPay Callback (Failed)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/payment/vnpay/callback?vnp_ResponseCode=01&vnp_TxnRef={{orderId}}&vnp_TransactionNo=12345678",
              "host": ["{{baseUrl}}"],
              "path": ["payment", "vnpay", "callback"],
              "query": [
                {
                  "key": "vnp_ResponseCode",
                  "value": "01",
                  "description": "Non-00 = Failed"
                },
                {
                  "key": "vnp_TxnRef",
                  "value": "{{orderId}}"
                },
                {
                  "key": "vnp_TransactionNo",
                  "value": "12345678"
                }
              ]
            },
            "description": "Test failed payment callback."
          },
          "response": []
        }
      ],
      "description": "VNPay payment gateway integration (sandbox mode)"
    },
    {
      "name": "PayPal",
      "item": [
        {
          "name": "Create PayPal Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100000\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/payment/paypal/create",
              "host": ["{{baseUrl}}"],
              "path": ["payment", "paypal", "create"]
            },
            "description": "Create a PayPal payment (placeholder - requires PayPal SDK setup for full implementation)."
          },
          "response": []
        }
      ],
      "description": "PayPal payment gateway integration (sandbox mode)"
    }
  ]
}
