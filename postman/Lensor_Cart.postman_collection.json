{
  "info": {
    "name": "Lensor - Cart",
    "description": "API collection for Shopping Cart module - manage cart items, quantities, and checkout",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3005",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string"
    },
    {
      "key": "cartItemId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get Cart",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/cart",
          "host": ["{{baseUrl}}"],
          "path": ["cart"]
        },
        "description": "Get current user's cart with all items and calculated total amount."
      },
      "response": []
    },
    {
      "name": "Add Item to Cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/cart/add",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "add"]
        },
        "description": "Add a product to cart. If product already exists in cart, quantity will be merged."
      },
      "response": []
    },
    {
      "name": "Update Cart Item Quantity",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"quantity\": 5\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/cart/update/{{cartItemId}}",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "update", "{{cartItemId}}"]
        },
        "description": "Update the quantity of a specific cart item."
      },
      "response": []
    },
    {
      "name": "Remove Item from Cart",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/cart/remove/{{cartItemId}}",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "remove", "{{cartItemId}}"]
        },
        "description": "Remove a specific item from the cart."
      },
      "response": []
    },
    {
      "name": "Clear Cart",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/cart/clear",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "clear"]
        },
        "description": "Remove all items from the cart."
      },
      "response": []
    }
  ]
}
